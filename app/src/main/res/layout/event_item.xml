<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/event_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:text="Дата:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=""
                android:id="@+id/event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="День недели:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=""
                android:id="@+id/event_weekday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Начало:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=""
                android:id="@+id/event_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Завершение:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=""
                android:id="@+id/event_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Состояние:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=""
                android:id="@+id/event_is_cancelled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

    </TableLayout>

</LinearLayout>